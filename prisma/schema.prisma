generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  // 고유 id
  id           Int       @id @default(autoincrement())
  // 실제 나이
  age          Int
  // 전화번호
  phone        String
  // 닉네임
  nickname     String
  // 작성한 게시글
  posts        Post[]    @relation(name: "UserPosts")
  // 스크랩한 게시글
  scrapedPosts Scrap[]   @relation(name: "UserScrapedPosts")
  // 세대 (예: 10대, 20대)
  generation   String
  // 생성된 시간
  createdAt    DateTime  @default(now())
  // 수정된 시간 (만약 수정되지 않았을 시엔 Null)
  updatedAt    DateTime  @updatedAt
  // 작성한 댓글
  Comment      Comment[]
}

model Post {
  // 고유 id
  id          Int       @id @default(autoincrement())
  // 게시글 내용
  content     String
  // 작성자 id
  authorId    Int
  // 좋아요 개수
  like        Int
  // 익명 여부
  isAnonymous Boolean
  // 작성자 정보
  userInfo    User      @relation(name: "UserPosts", fields: [authorId], references: [id])
  // 카테고리 id
  categoryId  Int
  // 카테고리 정보
  category    Category  @relation(fields: [categoryId], references: [id])
  // 댓글
  comments    Comment[]
  // 스크랩 정보
  scraps      Scrap[]
}

model Category {
  // 고유 id
  id    Int    @id @default(autoincrement())
  // 카테고리 이름
  name  String @unique
  // 게시물
  posts Post[]
}

model Comment {
  // 고유 id
  id         Int      @id @default(autoincrement())
  // 댓글 내용
  content    String
  // 게시글 id
  postId     Int
  // 작성자 id
  authorId   Int
  // 게시글 정보
  postInfo   Post     @relation(fields: [postId], references: [id])
  // 작성자 정보
  authorInfo User     @relation(fields: [authorId], references: [id])
  // 수정 일시 (만약 수정되지 않았다면 Null)
  updatedAt  DateTime @updatedAt
  // 생성 일시
  createdAt  DateTime @default(now())
  // 좋아요 개수
  like       Int
}

model Scrap {
  // 고유 id
  id        Int      @id @default(autoincrement())
  // 스크랩한 유저 id
  userId    Int
  // 스크랩한 게시글 id
  postId    Int
  // 유저 정보
  user      User     @relation(name: "UserScrapedPosts", fields: [userId], references: [id])
  // 게시글 정보
  post      Post     @relation(fields: [postId], references: [id])
  // 스크랩한 시간
  createdAt DateTime @default(now())
}
